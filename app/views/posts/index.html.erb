<% if @posts.any? %>
  <% @posts.each do |post| %>
    <%= link_to (image_tag post.image.url(:thumb)), post_path(post) %>
    <h2><%= link_to "#{post.name}", post_path(post) %></h2>
    <h2><%= link_to "Delete #{post.name}", post_path(post), method: :delete %></h2>
    <h2><%= link_to "Comment on #{post.name}", new_post_comment_path(post) %></h2>
  <% end %>
<% else %>
  No posts!
<% end %>

<a href="/posts/new">Create a Post</a>
